<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="Appearance">

        <SwitchPreferenceCompat
            android:key="dark_mode"
            android:title="Dark Mode"
            android:summary="Enable dark theme for the app"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="API Configuration">

        <EditTextPreference
            android:key="api_base_url"
            android:title="API Base URL"
            android:summary="Configure the API endpoint URL"
            android:defaultValue="https://tbsg.temenos.com/api/v1.0"
            android:inputType="textUri" />

        <EditTextPreference
            android:key="api_timeout"
            android:title="API Timeout (seconds)"
            android:summary="Set the API request timeout"
            android:defaultValue="30"
            android:inputType="number" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Data Management">

        <Preference
            android:key="clear_data"
            android:title="Clear All Data"
            android:summary="Delete all conversation history"
            app:icon="@android:drawable/ic_menu_delete" />

        <Preference
            android:key="export_data"
            android:title="Export Data"
            android:summary="Export conversation history to file"
            app:icon="@android:drawable/ic_menu_share" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="About">

        <Preference
            android:key="app_version"
            android:title="App Version"
            android:summary="1.0.0"
            android:selectable="false" />

        <Preference
            android:key="api_info"
            android:title="API Configuration"
            android:summary="View current API settings"
            android:selectable="false" />

    </PreferenceCategory>

</PreferenceScreen> 